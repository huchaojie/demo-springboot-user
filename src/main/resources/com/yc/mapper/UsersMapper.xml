<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.yc.mapper.UsersMapper" >

  <select id="login" parameterType="Users" resultType="Users">
    select * from users where name=#{name} and password=#{password}
  </select>

  <insert id="insertUser" parameterType="Users">
        insert into users(name,password,phone,age,sex,email)
        values (#{name}, #{password},#{phone}, #{age}, #{sex}, #{email})
   </insert>

    <select id="findById" parameterType="Users" resultType="Integer">
        select * from users where id=#{id}
    </select>

    <update id="update" parameterType="Users">
        update users
        <set>
            <if test="name!=null">
                userName=#{userName},
            </if>
            <if test="password!=null">
                password=#{password},
            </if>
        </set>
        <if test="id!=null">
            where id=#{id}
        </if>
    </update>

    <delete id="deleteById" parameterType="Users"><!-- uid=1是用户这个角色不能删除 -->
        delete from users where id=#{id} and id!=1
    </delete>
</mapper>